<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.greasemonkey.vendor.servicing_request.GenerateBillActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardServicingBill"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="visible"
                card_view:cardBackgroundColor="@color/whiteText"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/llServicingBill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GM Bike Services Bill"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="#efefef"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Order Id: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvOrderId"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Estimate Amount: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvEstimateBill"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Labour Charges: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvLabourCharges"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Bike Part Charges: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvBikePartCharges"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="GST Amount: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvGSTAmount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="#efefef"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Total Amount: "
                            android:textSize="15sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="-"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSendBill"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteText"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:background="#45992b"
                        android:text="Send"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
