    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/whiteText"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Description"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="#efefef"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Person Name"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bhushan Jetha"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvMobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9766616910"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Id"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvOrderId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0809809"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bike Registration Number"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvRegistrationNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MH 05 DG 7257"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manufacturer"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvManufacturere"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YAMAHA"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Model"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Type"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvServiceType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regular Service"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimate Amount"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvEstimatePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs. 0"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pick up - Drop"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvPickUpAndDrop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date / Time"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvPickupDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:15 AM 10 SEP"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="#bdbdbd"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Near Lodha World School, Kalyan - Shilphata Rd, Dombivli, Maharashtra 421204"
                            android:textColor="#000"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:visibility="gone"
                            android:textColor="#bdbdbd"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tvCommnent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Request you to check break."
                            android:textColor="#000"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Estimate Delivery Date"
                                android:textColor="#bdbdbd"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/tvEstemateDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 SEP 2019"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Estimate Delivery Time"
                                android:textColor="#bdbdbd"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvEstimateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03:30 PM"
                                android:textColor="#000"
                                android:textSize="12sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAccept"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/whiteText"
                            android:layout_margin="10dp"
                            android:background="#45992b"
                            android:text="Accept"/>

                        <Button
                            android:id="@+id/btnReject"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="#d72f2f"
                            android:textColor="@color/whiteText"
                            android:text="Reject"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
